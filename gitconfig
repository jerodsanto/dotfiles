# Jerod Santo's git settings
[core]
  excludesfile = /Users/jerod/.gitexcludes
  autocrlf = input

[user]
  name = Jerod Santo
  email = jerod.santo@gmail.com

[alias]
  co = checkout
  lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative

[apply]
  whitespace = nowarn

[push]
  default = current

[color]
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan